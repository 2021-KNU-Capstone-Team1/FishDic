<?xml version="1.0" encoding="utf-8"?>

<!-- 도감 레이아웃 정의 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DicActivity">

    <!-- 도감 외부 테이블 레이아웃 -->
    <TableLayout
        android:id="@+id/outerDic_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="visible">

        <!-- 도감 외부 테이블 레이아웃 : 상단 테이블 -->
        <TableRow
            android:id="@+id/outerDic_topTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/logo">

            <!-- 도감 내부 ConstraintLayout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 상단 툴바 -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/outerDic_toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <ImageButton
                        android:id="@+id/dic_back_imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/logo"
                        android:src="@drawable/back_to_40x40"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/dic_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="@string/dic"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <!-- 다음 줄로 넘겨야 함 -->

                    <ImageView
                        android:id="@+id/dic_search_imageView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/search_40x40"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/outerDic_toolBar"
                        tools:visibility="visible" />

                    <EditText
                        android:id="@+id/dic_search_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="false"
                        android:ems="15"
                        android:gravity="center"
                        android:hint="@string/enter_name"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/outerDic_toolBar"
                        android:visibility="visible"
                        tools:visibility="visible" />

                </androidx.appcompat.widget.Toolbar>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>

        <!-- 도감 외부 테이블 레이아웃 : 가운데 테이블 -->
        <TableRow
            android:id="@+id/outerDic_centerTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="99">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dic_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:visibility="visible" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>