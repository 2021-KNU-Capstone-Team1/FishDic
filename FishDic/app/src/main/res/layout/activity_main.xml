<?xml version="1.0" encoding="utf-8"?>

<!-- 메인화면 레이아웃 정의 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <!-- 메인화면 외부 테이블 레이아웃 -->
    <TableLayout
        android:id="@+id/outerMain_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <!-- 메인화면 외부 테이블 레이아웃 : 상단 테이블 -->
        <TableRow
            android:id="@+id/outerMain_topTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/logo">

            <!-- 메인화면 내부 ConstraintLayout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 상단 툴바 -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/outerMain_toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <ImageButton
                        android:id="@+id/main_menu_imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/logo"
                        android:src="@drawable/menu_40x40"
                        android:visibility="visible"
                        tools:visibility="visible" />

                </androidx.appcompat.widget.Toolbar>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>

        <!-- 메인화면 외부 테이블 레이아웃 : 가운데 테이블 -->
        <TableRow
            android:id="@+id/outerMain_centerTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="98">

            <!-- 메인화면 가운데 테이블 내부 ConstraintLayout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/banner_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_constraintTop_toTopOf="parent" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/banner_circleIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:ci_drawable="@drawable/indicator_radius"
                    app:ci_height="7dp"
                    app:ci_margin="4dp"
                    app:ci_width="7dp"
                    app:layout_constraintBottom_toBottomOf="@+id/banner_viewPager" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>

        <!-- 메인화면 외부 테이블 레이아웃 : 하단 테이블 -->
        <TableRow
            android:id="@+id/outerMain_bottomTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- 메인화면 내부 하단 버튼을 위한 레이아웃 -->
            <LinearLayout
                android:id="@+id/innerMain_bottomTable_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- 메인화면 내부 하단 버튼 -->
                <ImageButton
                    android:id="@+id/main_dic_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_style"
                    android:padding="3dp"
                    android:scaleType="center"
                    android:src="@drawable/icon_40x40" />

                <ImageButton
                    android:id="@+id/main_deniedFish_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_style"
                    android:padding="3dp"
                    android:scaleType="center"
                    android:src="@drawable/denied_fish_40x40" />

                <ImageButton
                    android:id="@+id/main_fishIdentification_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_style"
                    android:padding="3dp"
                    android:scaleType="center"
                    android:src="@drawable/camera_40x40" />

                <ImageButton
                    android:id="@+id/main_gallery_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_style"
                    android:padding="3dp"
                    android:scaleType="center"
                    android:src="@drawable/gallery_40x40" />

                <ImageButton
                    android:id="@+id/main_help_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_style"
                    android:padding="3dp"
                    android:scaleType="center"
                    android:src="@drawable/help_40x40" />
            </LinearLayout>

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>